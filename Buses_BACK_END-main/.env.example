# =====================================================================
# Django Configuration
# =====================================================================
DEBUG=False
DJANGO_SECRET_KEY=your-secure-secret-key-here-min-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1,api.example.com

# =====================================================================
# HTTPS & Security (للتطبيق Driver - الاتصال يكون https://)
# =====================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# =====================================================================
# Database Configuration (SQL Server)
# =====================================================================
DB_ENGINE=mssql
DB_NAME=BusTrackingDB
DB_HOST=localhost\SQLEXPRESS
DB_USER=sa
DB_PASSWORD=your-sql-server-password

# متغير بديل (اتصال مباشر):
# DATABASE_URL=mssql://sa:password@localhost\SQLEXPRESS/BusTrackingDB

# =====================================================================
# Redis Configuration (للـ WebSocket Channels - User app)
# =====================================================================
REDIS_URL=redis://localhost:6379/0

# =====================================================================
# CORS & CSRF Configuration
# =====================================================================
# قائمة النطاقات المسموح بها (Driver app)
CORS_ALLOWED_ORIGINS=https://driver.example.com,https://localhost:3000
CSRF_TRUSTED_ORIGINS=https://driver.example.com,https://localhost:3000

# =====================================================================
# Email Configuration (اختياري)
# =====================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =====================================================================
# Logging (اختياري)
# =====================================================================
LOG_LEVEL=INFO
