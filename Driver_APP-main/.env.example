# =====================================================================
# Bus Tracking Driver App - Environment Configuration
# =====================================================================

# Server Configuration
# الاتصال بين تطبيق السائق و السيرفر عبر HTTPS
# Driver ↔ Server: https://
API_BASE_URL=https://api.example.com/api
API_TIMEOUT=30

# Authentication Token (يتم الحصول عليه بعد تسجيل الدخول)
# يجب ألا يتم رفع القيمة الفعلية في المستودع
AUTH_TOKEN=your-driver-auth-token-here

# Location Tracking Configuration
# تحديث موقع الحافلة كل 5 ثواني
LOCATION_UPDATE_INTERVAL=5000

# Background Service
# استمرار التتبع في الخلفية
ENABLE_BACKGROUND_SERVICE=true

# SSL/TLS Certificate Pinning (اختياري - لأمان إضافي)
# تفعيل تثبيت الشهادة لتجنب MITM attacks
ENABLE_CERTIFICATE_PINNING=false
CERTIFICATE_SHA256=your-certificate-sha256-hash
